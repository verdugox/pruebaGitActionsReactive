pipeline {
    agent any  // Ejecutar en cualquier nodo disponible
    environment {
        MAVEN_HOME = tool 'Maven 3.9.9'
        JAVA_HOME = tool 'JDK17'
        DEPLOY_ENV = "dev"
        CONFIG_FILE = "devops/deploy/dev-vars.yaml"
    }

    stages {
        stage('Preparation') {
            steps {
                echo "Preparing environment for ${DEPLOY_ENV} deployment..."
                checkout scm
                bat "java -version"
                bat "mvn --version"
            }
        }
        stage('Build') {
            steps {
                echo "Building project..."
                dir('client-service') {
                    bat "mvn clean package"
                }
            }
        }
        stage('Deploy to Localhost') {
            steps {
                echo "Deploying to localhost..."
                script {
                    def jarFile = "client-service/target/client-service.jar"
                    bat "java -jar ${jarFile} --spring.config.location=${CONFIG_FILE}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check the logs."
        }
    }
}
